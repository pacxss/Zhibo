<?xml version="1.0" encoding="utf-8"?><!--娱乐页面全部中LivtView的尾部-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ent_tail_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/backaround_gray"
        android:gravity="center"
        android:text="@string/main_tv_title"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <com.example.lanouhn.zhibo.view.NoScrollGridView
        android:id="@+id/ent_tail_gv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:horizontalSpacing="10dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="2">

    </com.example.lanouhn.zhibo.view.NoScrollGridView>

</LinearLayout>