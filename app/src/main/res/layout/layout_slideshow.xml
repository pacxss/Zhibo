<?xml version="1.0" encoding="utf-8"?><!--轮播图的布局-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/guide_slide_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/guide_slide_ll"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:background="@color/touming_light"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="8dp"
        android:paddingRight="10dp">

        <View
            android:id="@+id/guide_slide_normal"
            android:layout_width="8dp"
            android:layout_height="8dp" />

        <View
            android:id="@+id/guide_slide_checker"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="5dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/guide_slide_tv"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="12sp" />

</RelativeLayout>