<?xml version="1.0" encoding="utf-8"?><!--娱乐页面全部中LivtView的item的布局-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/ent_item_iv_zhibo"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/icon_zhibo" />

        <TextView
            android:id="@+id/ent_item_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/ent_item_iv_zhibo"
            android:text="@string/zhibo_tv_ing"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/ent_item_ll_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ent_item_tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zhibo_tv_total"
                android:textColor="@color/text_gray"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/ic_arrow_go" />

        </LinearLayout>

    </RelativeLayout>

    <com.example.lanouhn.zhibo.view.NoScrollGridView
        android:id="@+id/ent_item_gv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:horizontalSpacing="10dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/backaround_gray" />

</LinearLayout>